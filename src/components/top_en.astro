---
// top.astroのコンポーネントスクリプト部分
// ここにJavaScript/TypeScriptのロジックを記述できます
import "../styles/global.css";
import { Image } from 'astro:assets';
import LogoImage from '../assets/images/pssjy_logo.png';
// import LogoImram from '../assets/images/IMRAM_logo.png';
import LogoArcbs from '../assets/images/ARCBS_logo.png';
import LogoImram from '../assets/images/symlogo_bn_l.png';
import bgfig from '../assets/images/nanoterasu.jpeg'
// 英語への切り替えスイッチ
import LanguagePicker from '../components/languagepicker.astro';
// some bundlers / astro image handling may return an object for imported images
// make a safe string URL we can pass to inline style
const bgUrl = typeof bgfig === 'string' ? bgfig : (bgfig?.src ?? bgfig?.default ?? '');
const fontHref = "https://fonts.googleapis.com/css2?family=Sawarabi+Mincho&display=swap";
const eventDate = "Date: February 24th (Tue), 2026";
---

<!-- top.astroのテンプレート部分 -->
<header class="site-header">
    <div class="header-container">
        <div class="header-spacer"></div>
        <div class="header-lang">
            <LanguagePicker />
        </div>
    </div>
</header>

<main>
    <!-- Google Fonts を読み込む -->
    <link href={fontHref} rel="stylesheet" />

        <section
            class="hero"
            style={`background-image: url('${bgUrl}'); --hero-overlay-rgb: 0,0,0; --hero-overlay-opacity: 0.45; --hero-fg: #fff;`}>
        <Image
            class="logo"
            src={LogoImage}
            alt="蛋白質科学会ロゴ"
            width={150}
            height={150}
        />
        <Image src={LogoImram} alt="多元研ロゴ" width={140} height={140}></Image>
        <h1>The 1st Protein Science Workshop<br>for Young Researchers (FY2025)</h1>
    </section>
    <section class="hero_contents">
        <p class="text">
        {eventDate}<br>
        Registration fee: Free<br>
        Venue：Sakura Hall at Katahira Campus, Tohoku University<br>
        <br>
        Host: The Protein Science Society of Japan<br>
        Co-hosted by Committee for DEI of IMRAM<br>
        Sponsered by ARCBS<br>
        </p>
    </section>
    <!-- styles for .hero moved to src/styles/global.css -->

    <section class="deadline">
        <p>Registration deadline：February 17th, 2026</p>
    </section>

    <section class="link">
        <a
        href="https://forms.gle/D9Fwxoa2Rw6Sugjb7" 
        target="_blank" 
        rel="noopener noreferrer" 
        class="button-link" 
        >
        Register Here
        </a>
    </section>
    <!-- styles for .link moved to src/styles/global.css -->
    
    <section class="content1">
        <p class="explanation">
            We are pleased to announce a networking workshop dedicated to early-career researchers engaged in the broad field of life sciences.<br>
            The event will feature keynote lectures focusing on the career paths and research methodologies of young scientists, as well as a poster session.<br> 
            The poster session is open to students, postdoctoral fellows, and assistant professors, generally those aged 40 and under.<br>
            We hope this workshop will serve as a platform for fostering collaboration through research presentations and providing valuable insights to further your scientific endeavors.</p>

        <p class="program_title">
        Program
        </p>

        <p class="program date">February 24th</p>

        <div class="program schedule">
            <div class="schedule-row">
                <div class="time">11:00 — 12:00</div>
                <div class="desc">Facility Tour: Protein Crystallography Endstations at NanoTerasu<br>(※ Optional / Limited to 20)</div>
            </div>
            <div class="schedule-row">
                <div class="time">13:00</div>
                <div class="desc">Opening</div>
            </div>
            <div class="schedule-row">
                <div class="time">13:30 — 14:50</div>
                <div class="desc">
                    Keynote Lectures<br>
                    <br>
                    Professor Masaki Okumura, Institute of Interdisciplinary Chemistry and Biotechnology, Tohoku University<br>
                    Title: "The Balance of Passion and Calmness"<br>
                    <br>
                    Professor Maoko Fukuyama, Institute of Multidisciplinary Materials Science, Tohoku University<br>
                    Title: "Why I Chose Protein Research"<br>

                </div>
            </div>
            <div class="schedule-row">
                <div class="time">15:00 — 17:30</div>
                <div class="desc">
                    Poster presentations<br>
                    （※ Recommended in English）<br>
                </div>
            </div>
        </div>
    </section>
    <!-- content1 styles moved to src/styles/global.css; note selectors corrected (.program.date / .program.contents) -->

    <!-- venue block: contact left, map right -->
        
    <div class="map">
        <h3>Venue Guide Map</h3>
            <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3133.1518579823132!2d140.87493229999998!3d38.2527839!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x5f8a281368acf0b5%3A0x3954ad8de8c50363!2z5p2x5YyX5aSn5a2mIOeJh-W5s-OBleOBj-OCieODm-ODvOODqw!5e0!3m2!1sja!2sjp!4v1763816874278!5m2!1sja!2sjp",
            width="450" 
            height="450" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade">
            </iframe>
    </div>

    <section class="contact">
        <h2>Contact</h2>
        <p class="contents">
        Eriko Nango<br>
        (Tohoku University, Institute of Multidisciplinary Materials Science)<br>
        〒980-8577<br>
        2-1-1, Aoba, Sendai City<br>
        (TEL) 022-217-5344<br>
        e-mail: eriko.nango.c4@tohoku.ac.jp<br>
        </p>
    </section>
    <!-- map/contact venue block moved into a single .venue row, styled in global.css -->

    <!-- co-host information -->

    <section class="co-host">
        <section class="co-host_title">
            <h4 class="contents">
            Sponsered by
            </h4>
        </section>
    </section>
    
    <div class="co-host-logo">
        <div class="arcbs">
            <Image
            class="arcbs_logo"
            src={LogoArcbs}
            alt="ARCBSロゴ"
            >
        <div>
    </div>
    <!-- end -->

</main>

<!-- component-local style placeholder removed: moved to src/styles/global.css -->
